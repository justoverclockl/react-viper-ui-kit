{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["lib/components/*"],
      "@utils/*": ["lib/utils/*"],
      "@hooks/*": ["lib/hooks/*"]
    },
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
